# Supabase Configuration
# Get these from your Supabase project settings: https://app.supabase.com/project/_/settings/api

# Supabase Project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_URL=https://your-project-ref.supabase.co

# Supabase Anon Key (safe to use in browser)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Supabase Service Role Key (server-side only, keep secret!)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Database URL (for migrations and direct database access)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# JWT Secret (from Supabase settings)
SUPABASE_JWT_SECRET=your-jwt-secret

# Application Settings
NEXT_PUBLIC_APP_URL=http://localhost:3000
APP_ENV=development

# Redis Configuration (optional, for caching)
REDIS_URL=redis://localhost:6379/0

# Email Configuration (optional, Supabase handles auth emails by default)
# SMTP settings can be configured in Supabase dashboard

# Storage Configuration
NEXT_PUBLIC_STORAGE_BUCKET=shortenlink-assets

# Edge Function URLs (if using Supabase Edge Functions)
NEXT_PUBLIC_REDIRECT_FUNCTION_URL=https://your-project-ref.supabase.co/functions/v1/redirect

# OAuth Providers (configure in Supabase dashboard)
# NEXT_PUBLIC_OAUTH_PROVIDERS=google,github

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# Analytics (optional)
NEXT_PUBLIC_ANALYTICS_ENABLED=false

# Development Only
# For local Supabase development
SUPABASE_LOCAL_URL=http://localhost:54321
NEXT_PUBLIC_SUPABASE_LOCAL_URL=http://localhost:54321