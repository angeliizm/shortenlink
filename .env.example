# Application
APP_ENV=development
APP_URL=http://localhost:3000
API_URL=http://localhost:8080
LOG_LEVEL=debug

# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/shortenlink?sslmode=disable
DB_MAX_CONNECTIONS=100
DB_MAX_IDLE_CONNECTIONS=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_RETRIES=3
REDIS_POOL_SIZE=10

# Security
JWT_SECRET=change-this-in-production-minimum-64-characters-required-for-security
JWT_PUBLIC_KEY=
SESSION_SECRET=another-secret-for-sessions-minimum-32-characters
ARGON2_MEMORY=65536
ARGON2_ITERATIONS=3
ARGON2_PARALLELISM=4

# Cloudflare
CF_API_TOKEN=
CF_ZONE_ID=
CF_TURNSTILE_SECRET=
CF_TURNSTILE_SITE_KEY=
CF_KV_NAMESPACE_ID=

# Email (SMTP)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@localhost

# External Services
GEO_DB_PATH=/data/GeoLite2-City.mmdb
SENTRY_DSN=
VIRUSTOTAL_API_KEY=
SAFE_BROWSING_KEY=

# Monitoring
PROMETHEUS_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=shortenlink

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# CORS
CORS_ORIGINS=http://localhost:3000

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_TURNSTILE_SITE_KEY=